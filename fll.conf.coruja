[ 'archs' ]
	#[[ 'i386' ]]
	#linux = siduction-686

	[[ 'amd64' ]]
	linux = siduction-amd64

[ 'repos' ]
	[[ 'debian' ]]
	label		= debian
	uri		= http://ftp.debian.org/debian
	cached		=
	suite		= unstable
	components	= main

	[[ 'siduction' ]]
	label		= siduction
	uri		= http://packages.siduction.org/siduction/
	cached		=
	suite		= unstable
	components	= main contrib non-free
	#gpgkey		= foo
	gpgkey		= /usr/share/siduction-archive-keyring/45C45076.asc
	#keyring	= siduction-archive-keyring

	[[ 'fix' ]]
	label		= siduction-fixes
	uri		= http://packages.siduction.org/fixes
	cached		=
	suite		= unstable
	components	= main contrib non-free
	#gpgkey		= 45C45076
	gpgkey		= /usr/share/siduction-archive-keyring/45C45076.asc
	#keyring	= siduction-archive-keyring


[ 'options' ]
build_dir = /home/debbuilder/pbuilder/build
output_dir = /home/debbuilder/pyfll-coruja/iso

#build_log =

